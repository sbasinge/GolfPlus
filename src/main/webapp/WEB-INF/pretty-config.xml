<?xml version="1.0" encoding="UTF-8"?>
<pretty-config xmlns="http://ocpsoft.com/prettyfaces/2.0.4"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="
        http://ocpsoft.com/prettyfaces/2.0.4
        http://ocpsoft.com/xml/ns/prettyfaces/ocpsoft-pretty-faces-2.0.4.xsd">

    <url-mapping id="home">
        <pattern value="/"></pattern>
        <view-id>/home.xhtml</view-id>
    </url-mapping>

    <url-mapping id="conversation_ended">
        <pattern value="/conversation_ended"></pattern>
        <view-id>/home.xhtml</view-id>
    </url-mapping>

    <url-mapping id="logout">
        <pattern value="/logout"></pattern>
        <view-id>/home.xhtml</view-id>
        <action>#{identity.logout}</action>
    </url-mapping>

<!-- 
    <url-mapping>
        <pattern value="/hotel/#{/\\d+/ id }"></pattern>
        <view-id>/hotel.xhtml</view-id>
    </url-mapping>
 -->
    <url-mapping id="clubLogin">
        <pattern value="/#{ clubName }/login"></pattern>
        <view-id>/home.xhtml</view-id>
    </url-mapping>
    <url-mapping id="clubMembers">
        <pattern value="/#{ clubName }/members"></pattern>
        <view-id>/user/memberList.xhtml</view-id>
    </url-mapping>
    <url-mapping>
        <pattern value="/login/#{ clubName }"></pattern>
        <view-id>/home.xhtml</view-id>
    </url-mapping>
    <url-mapping>
        <pattern value="/#{ clubName }/register"></pattern>
        <view-id>/user/register.xhtml</view-id>
    </url-mapping>
    <url-mapping>
        <pattern value="/register/#{ clubName }"></pattern>
        <view-id>/user/register.xhtml</view-id>
    </url-mapping>

    <url-mapping id="register">
        <pattern value="/register"></pattern>
        <view-id>/user/register.xhtml</view-id>
    </url-mapping>

    <url-mapping id="account">
        <pattern value="/account"></pattern>
        <view-id>/user/account.xhtml</view-id>
    </url-mapping>

    <url-mapping>
        <pattern value="/password"></pattern>
        <view-id>/user/password.xhtml</view-id>
    </url-mapping>

</pretty-config>
