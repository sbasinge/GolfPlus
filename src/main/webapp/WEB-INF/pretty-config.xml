<?xml version="1.0" encoding="UTF-8"?>
<pretty-config xmlns="http://ocpsoft.com/prettyfaces/2.0.4"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="
        http://ocpsoft.com/prettyfaces/2.0.4
        http://ocpsoft.com/xml/ns/prettyfaces/ocpsoft-pretty-faces-2.0.4.xsd">

    <url-mapping id="home">
        <pattern value="/"></pattern>
        <view-id>/home.jsf</view-id>
    </url-mapping>
    <url-mapping id="mobileHome">
        <pattern value="/mobile/"></pattern>
        <view-id>/mobile/home.jsf</view-id>
    </url-mapping>

    <url-mapping id="conversation_ended">
        <pattern value="/conversation_ended"></pattern>
        <view-id>/home.jsf</view-id>
    </url-mapping>
    <url-mapping id="session_ended">
        <pattern value="/session_ended"></pattern>
        <view-id>/home.jsf</view-id>
    </url-mapping>

    <url-mapping id="page_not_found">
        <pattern value="page_not_found"></pattern>
        <view-id>/home.jsf</view-id>
    </url-mapping>

    <url-mapping id="logout">
        <pattern value="/logout"></pattern>
        <view-id>/home.jsf</view-id>
        <action>#{identity.logout}</action>
    </url-mapping>
    <url-mapping>
        <pattern value="/login"></pattern>
        <view-id>/home.jsf</view-id>
    </url-mapping>

    <url-mapping id="clubLogin">
        <pattern value="/#{ clubName }/login"></pattern>
        <view-id>/home.jsf</view-id>
    </url-mapping>
    <url-mapping id="clubMembers">
        <pattern value="/#{ clubName }/members"></pattern>
        <view-id>/user/memberList.jsf</view-id>
    </url-mapping>
    <url-mapping>
        <pattern value="/#{ clubName }/register"></pattern>
        <view-id>/user/register.jsf</view-id>
    </url-mapping>
    <url-mapping>
        <pattern value="/register/#{ clubName }"></pattern>
        <view-id>/user/register.jsf</view-id>
    </url-mapping>

    <url-mapping id="register">
        <pattern value="/register"></pattern>
        <view-id>/user/register.jsf</view-id>
    </url-mapping>

    <url-mapping id="account">
        <pattern value="/account"></pattern>
        <view-id>/user/account.jsf</view-id>
    </url-mapping>

    <url-mapping>
        <pattern value="/password"></pattern>
        <view-id>/user/password.jsf</view-id>
    </url-mapping>

</pretty-config>
